{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"verbatimModuleSyntax": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@": ["./src"],
			"@shared/common/*": ["../../packages/common/src"],
			"@lib/*": ["./src/lib/*"],
			"@lib": ["./src/lib"],
			"@utils/*": ["./src/utils/*"],
			"@utils": ["./src/utils"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next.config.ts"],
	"exclude": ["node_modules"]
}
