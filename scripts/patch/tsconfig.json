{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "bundler", // or "nodenext" or "bundler"
		"baseUrl": ".",
		"strictNullChecks": true,
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"verbatimModuleSyntax": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
